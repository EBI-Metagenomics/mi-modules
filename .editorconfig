root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = space

[*.dmnd]
charset = off
end_of_line = off
insert_final_newline = off
trim_trailing_whitespace = off
indent_size = off
indent_style = off

[*.{md,yml,yaml,cff}]
indent_size = 2

[*.{cm,dmnd}]
charset = utf-8
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_size = unset
indent_style = unset
