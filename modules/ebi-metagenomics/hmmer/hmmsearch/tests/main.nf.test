
nextflow_process {

    name "Test Process HMMER_HMMSEARCH"
    script "../main.nf"
    process "HMMER_HMMSEARCH"
    config "./nextflow.config"


    tag "modules"
    tag "modules_nfcore"
    tag "hmmer"
    tag "hmmer/hmmsearch"

    test("hmmsearch") {

        when {
            process {
                """                
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file("${moduleDir}/tests/test.fasta", checkIfExists: true)
                    ]
                input[1] = file("${moduleDir}/tests/seqdb/test1.hmm*", checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(path(process.out.get(0).get(0).get(1)).readLines()[7].contains("# Query file:      ")).match() }
            )
        }

    }

    test("hmmsearch- stub") {

        options "-stub"

        when {
            process {
                """                
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    file("${moduleDir}/tests/test.fasta", checkIfExists: true)
                    ]
                input[1] = file("${moduleDir}/tests/seqdb/test1.hmm*", checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
