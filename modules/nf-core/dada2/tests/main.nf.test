nextflow_process {

    name "Test Process DADA2"
    script "../main.nf"
    process "DADA2"

    tag "modules"
    tag "modules_nfcore"
    tag "dada2"

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used
    test("Toy test fastq pared reads") {

        when {
            params {
                outdir = "$outputDir"
            }
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    [
                        file('${moduleDir}/tests/fixtures/test_noambig_1.fastq.gz', checkIfExists: true),
                        file('${moduleDir}/tests/fixtures/test_noambig_2.fastq.gz', checkIfExists: true) 
                    ]
                ]             
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.dada2_out).match() }
                //TODO nf-core: Add all required assertions to verify the test output.
                // See https://nf-co.re/docs/contributing/tutorials/nf-test_assertions for more information and examples.
            )
        }

    }

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used but keep the " - stub" suffix.
    test("Toy test fastq pared reads - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ], // meta map
                    [
                        file('${projectDir}/modules/nf-core/dada2/tests/fixtures/test_noambig_1.fastq.gz', checkIfExists: true),
                        file('${projectDir}/modules/nf-core/dada2/tests/fixtures/test_noambig_2.fastq.gz', checkIfExists: true) 
                    ]
                ]        
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out.dada2_out).match() }
                //TODO nf-core: Add all required assertions to verify the test output.
            )
        }

    }

}
